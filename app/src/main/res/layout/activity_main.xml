<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="bottom|center">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_shape">

            <TextView
                style="@style/CustomTitleTextView"
                android:text="@string/title_sales" />
            <TextView
                style="@style/CustomTitleTextView"
                android:text="@string/title_assistant" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="35dp">

            <Button
                android:text="@string/clients_manage"
                android:id="@+id/btnClients"
                style="@style/CustomTitleButton"
                android:onClick="onBtnClientsClick" />

            <Button
                style="@style/CustomTitleButton"
                android:text="@string/products_manage"
                android:id="@+id/btnProducts"
                android:onClick="onBtnProductsClick" />

            <Button
                style="@style/CustomTitleButton"
                android:text="@string/my_sales"
                android:id="@+id/btnSales"
                android:nestedScrollingEnabled="false"
                android:onClick="onBtnSalesClick" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
